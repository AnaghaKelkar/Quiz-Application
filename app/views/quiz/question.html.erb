<% if @message.present? %>
  <div class="container" style = "margin-top: 5%">
    <div class="row">
      <center>
        <p class = "positive-review"><b><%= @message %></b></p>
        <p style = "margin-top: 2%"><%= link_to 'Select another category', categories_path %></p>
      </center>
    </div>
  </div>
<% elsif @next_question.present? %>
  <%= render 'quiz_question', question: @next_question, choices: @choices, category: @category, quelist: @question_ids, quiz: @quiz %>
<% else %>
  <%= render 'quiz_thankyou', score: @score, quiz: @quiz, quelist: @question_ids %>
<% end %>
